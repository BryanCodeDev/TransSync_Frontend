# URL de la API del backend (se configurará en Railway)
REACT_APP_API_URL=https://transsync-backend-production.up.railway.app

# URL del servidor WebSocket
REACT_APP_WS_URL=wss://transsync-backend-production.up.railway.app

# Configuración de la aplicación
REACT_APP_NAME=TransSync
REACT_APP_VERSION=1.1.0

# Configuración de geolocalización
REACT_APP_GEOLOCATION_TIMEOUT=15000
REACT_APP_GEOLOCATION_HIGH_ACCURACY=true

# URLs de servicios de mapas externos (para fallbacks)
REACT_APP_GOOGLE_MAPS_URL=https://www.google.com/maps
REACT_APP_OSM_URL=https://www.openstreetmap.org

# Configuración de debugging (desactivado en producción)
REACT_APP_DEBUG_MODE=false

# Configuración de país por defecto
REACT_APP_DEFAULT_COUNTRY=co

# Configuración de timeout para API
REACT_APP_API_TIMEOUT=10000

# Configuración de PWA
REACT_APP_PWA_ENABLED=true

# Configuración de analytics (si se usa)
REACT_APP_GA_ID=

# Configuración de Sentry (si se usa para error tracking)
REACT_APP_SENTRY_DSN=